<div class="register">
    <%- messages('messages', locals) %>
        <div class="side_reg">
            <h1>We are a live changing platform</h1>
            <h3>You will never regret with us
                <a href="./login">sign IN</a>
            </h3>
            
        </div>

    <div class="form_wrapper">
        <div class="form_container">
            <div class="title_container">
                <h2>Register an account</h2>
            </div>
            <div class="row clearfix">
                <div class="">
                    <form method="POST" action="/user/register">
                        <div class="input_field"> <span><i aria-hidden="true" class="fa fa-envelope"></i></span>
                            <input type="email" name="email" value="<%= email %>" placeholder="Email" />
                        </div>
                        <div class="input_field"> <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                            <input type="password" name="password" pattern=".{6,}" title="6 characters minimum" placeholder="Password" required />
                        </div>
                        <div class="input_field"> <span><i aria-hidden="true" class="fa fa-lock"></i></span>
                            <input type="password" name="password2" pattern=".{6,}" title="6 characters minimum" placeholder="Re-type Password" required />
                        </div>
                        <div class="row clearfix">
                            <div class="col_half">
                                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                                    <input type="text" name="fName" value="<%= fName %>" placeholder="First Name" />
                                </div>
                            </div>
                            <div class="col_half">
                                <div class="input_field"> <span><i aria-hidden="true" class="fa fa-user"></i></span>
                                    <input type="text" name="lName" value=" <%= lName %>" placeholder="Last Name" required />
                                </div>
                            </div>
                        </div>
                        <div class="input_field"> <span><i aria-hidden="true" class="fa fa-school"></i></span>
                            <input type="text" name="bvn" value="<%= bvn %>" placeholder="BVN" required />
                        </div>
                        <div class="input_field"> <span><i aria-hidden="true" class="fa fa-phone"></i></span>
                            <input type="number" name="num" value="<%= num %>" placeholder="PHONE NUM" required />
                        </div>
                        <div class="input_field radio_option">
                            <input type="radio" value="Male" name="gender" id="rd1">
                            <label for="rd1">Male</label>
                            <input type="radio" value="Female" name="gender" id="rd2">
                            <label for="rd2">Female</label>
                        </div>
                        <div class="input_field checkbox_option">
                            <input type="checkbox" name="agree" value="yes" id="cb1">
                            <label  for="cb1">I agree with terms and conditions</label>
                        </div>
                        <input class="button" type="submit" value="Register" />
                    </form>
                </div>
            </div>
        </div>
    </div> 
    </div>
